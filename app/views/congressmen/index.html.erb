
<% if @congressmen.empty? %>

<h3> Não há dados no banco de dados para serem carregados!</h3>
<% else %>
<div class="py-5 text-center">
  <h1>Congressmen</h1>
</div>


<table class="table">
  <thead>
    <tr>
      <th><%= t('Id')%></th>
      <th><%= t('Name')%></th>
      <th><%= t('Cpf')%></th>
      <th><%= t('Cod Parliament')%></th>
      <th><%= t('Legislature')%></th>
      <th><%= t('Uf')%></th>
      <th><%= t('Party')%></th>
      <th><%= t('Cod Legislature')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @congressmen.each do |congressman| %>
      <tr>
        <td><%= congressman.id %></td>
        <td><%= congressman.name %></td>
        <td><%= congressman.cpf %></td>
        <td><%= congressman.cod_parliament %></td>
        <td><%= congressman.legislature %></td>
        <td><%= congressman.uf %></td>
        <td><%= congressman.party %></td>
        <td><%= congressman.cod_legislature %></td>
        <td><%= link_to t('Show'), congressman, class: 'btn btn-warning' %></td>
        <td><%= link_to t('Destroy'), congressman, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<div class="mt-3 pagination pull-right">
  <%= paginate @congressmen %>
</div>



<% end %>


