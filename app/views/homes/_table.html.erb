<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= t(".name") %></th>
      <th scope="col"><%= t(".registre") %></th>
      <th scope="col"><%= t(".uf") %></th>
      <th scope="col"><%= t(".higher_expenses") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deputes.each do |deputy| %>
      <tr>
        <td><%= link_to deputy.tx_nome_parlamentar, home_path(deputy) %></td>
        <td><%= deputy.id_cadastro %></td>
        <td><%= deputy.sg_uf %></td>
        <td>R$ <%= number_to_currency(deputy.maior_despesa, unit: "", separator: ",", delimiter: "", format: "%n %u") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
